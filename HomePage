
import React, { useState, useEffect, useRef } from "react";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Card, CardContent } from "@/components/ui/card";
import {
  Sprout,
  Cloud,
  BarChart3,
  Target,
  Globe,
  Cpu,
  Mail,
  Phone,
  MapPin,
  ChevronRight,
  Menu,
  X,
  LineChart,
  DollarSign,
  Award,
  FileText,
} from "lucide-react";
import { motion, useScroll, useTransform } from "framer-motion";
import { Link } from "react-router-dom";
import { createPageUrl } from "./utils";

export default function Home() {
  const [isMenuOpen, setIsMenuOpen] = useState(false);
  const [isScrolled, setIsScrolled] = useState(false);
  const [formData, setFormData] = useState({
    name: "",
    email: "",
    company: "",
    message: "",
  });
  const [isSubmitting, setIsSubmitting] = useState(false);

  const heroRef = useRef(null);
  const scrollConfig = {
    target: heroRef,
    offset: ["start start", "end start"],
  };
  const { scrollYProgress } = useScroll(scrollConfig);

  const heroOpacity = useTransform(scrollYProgress, [0, 1], [1, 0]);
  const heroScale = useTransform(scrollYProgress, [0, 1], [1, 0.8]);

  useEffect(function() {
    const handleScroll = function() {
      setIsScrolled(window.scrollY > 50);
    };
    window.addEventListener("scroll", handleScroll);
    return function() {
      window.removeEventListener("scroll", handleScroll);
    };
  }, []);

  const scrollToSection = function(id) {
    const element = document.getElementById(id);
    if (element) {
      element.scrollIntoView({ behavior: "smooth", block: "start" });
    }
    setIsMenuOpen(false);
  };

  const handleSubmit = async function(e) {
    e.preventDefault();
    setIsSubmitting(true);
    await new Promise(function(resolve) { setTimeout(resolve, 1500); });
    alert("Thank you! We'll be in touch soon.");
    setFormData({ name: "", email: "", company: "", message: "" });
    setIsSubmitting(false);
  };

  const services = [
    {
      icon: Sprout,
      title: "Crop Cutting Experiments",
      description:
        "High-precision crop cutting services across India to provide accurate yield estimations for various crops, essential for trading and insurance.",
      color: "from-green-500 to-emerald-600",
    },
    {
      icon: Globe,
      title: "Comprehensive Crop Surveys",
      description:
        "Extensive field surveys using geospatial technology to gather data on crop health, acreage, and growth stages for informed decision-making.",
      color: "from-blue-500 to-cyan-600",
    },
    {
      icon: Cloud,
      title: "Advanced Weather Data",
      description:
        "Real-time and historical weather data analytics, offering predictive insights into weather patterns that impact crop yield and logistics.",
      color: "from-purple-500 to-indigo-600",
    },
    {
      icon: BarChart3,
      title: "Supply & Demand Models",
      description:
        "Sophisticated economic models that forecast market trends, pricing, and commodity flows, giving our clients a competitive edge.",
      color: "from-orange-500 to-amber-600",
    },
    {
      icon: LineChart,
      title: "Advanced Statistical Models & Reporting",
      description:
        "Comprehensive statistical analysis and customized reporting solutions that transform raw data into actionable insights for strategic decision-making.",
      color: "from-rose-500 to-pink-600",
    },
    {
      icon: DollarSign,
      title: "Commodities Pricing",
      description:
        "Real-time and historical price tracking for a wide range of agricultural commodities, enabling smarter trading and risk management.",
      color: "from-yellow-500 to-amber-600",
    },
  ];

  const benefits = [
    {
      icon: Target,
      title: "Unmatched Accuracy",
      description:
        "Our rigorous, multi-stage data validation process ensures the highest level of accuracy in all our reports and models.",
    },
    {
      icon: Globe,
      title: "Pan-India Network",
      description:
        "With a presence in every major agricultural state, we offer unparalleled ground-level coverage and local expertise.",
    },
    {
      icon: Cpu,
      title: "Technology-Driven",
      description:
        "We utilize the latest in satellite imagery, machine learning, and mobile technology to stay ahead of the curve.",
    },
  ];

  return (
    <div className="min-h-screen bg-gradient-to-b from-stone-50 to-amber-50/30">
      <style>{`
        :root {
          --primary: 72 75% 42%;
          --primary-foreground: 0 0% 98%;
          --accent: 43 74% 49%;
        }
      `}</style>

      <nav
        className={`fixed top-0 left-0 right-0 z-50 transition-all duration-300 ${
          isScrolled
            ? "bg-white/95 backdrop-blur-md shadow-lg"
            : "bg-transparent"
        }`}
      >
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex justify-between items-center h-20">
            <div className="flex items-center gap-2">
              <div className="w-10 h-10 bg-gradient-to-br from-green-600 to-emerald-700 rounded-lg flex items-center justify-center">
                <Sprout className="w-6 h-6 text-white" />
              </div>
              <span className="text-2xl font-bold bg-gradient-to-r from-green-700 to-emerald-600 bg-clip-text text-transparent">
                Nyasa Agri-Tech
              </span>
            </div>

            <div className="hidden md:flex items-center gap-8">
              <button
                onClick={function() { scrollToSection("home"); }}
                className="text-gray-700 hover:text-green-600 font-medium transition-colors"
              >
                Home
              </button>
              <button
                onClick={function() { scrollToSection("services"); }}
                className="text-gray-700 hover:text-green-600 font-medium transition-colors"
              >
                Services
              </button>
              <button
                onClick={function() { scrollToSection("about"); }}
                className="text-gray-700 hover:text-green-600 font-medium transition-colors"
              >
                About Us
              </button>
              <Link
                to={createPageUrl("MarketInsights")}
                className="text-gray-700 hover:text-green-600 font-medium transition-colors"
              >
                Market Insights
              </Link>
              <button
                onClick={function() { scrollToSection("contact"); }}
                className="text-gray-700 hover:text-green-600 font-medium transition-colors"
              >
                Contact
              </button>
              <Button
                onClick={function() { scrollToSection("contact"); }}
                className="bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700"
              >
                Get a Quote
              </Button>
            </div>

            <button
              className="md:hidden"
              onClick={function() { setIsMenuOpen(!isMenuOpen); }}
            >
              {isMenuOpen ? (
                <X className="w-6 h-6" />
              ) : (
                <Menu className="w-6 h-6" />
              )}
            </button>
          </div>
        </div>

        {isMenuOpen && (
          <motion.div
            initial={{ opacity: 0, y: -20 }}
            animate={{ opacity: 1, y: 0 }}
            className="md:hidden bg-white border-t"
          >
            <div className="px-4 py-6 space-y-4">
              <button
                onClick={function() { scrollToSection("home"); }}
                className="block w-full text-left py-2 text-gray-700 hover:text-green-600 font-medium"
              >
                Home
              </button>
              <button
                onClick={function() { scrollToSection("services"); }}
                className="block w-full text-left py-2 text-gray-700 hover:text-green-600 font-medium"
              >
                Services
              </button>
              <button
                onClick={function() { scrollToSection("about"); }}
                className="block w-full text-left py-2 text-gray-700 hover:text-green-600 font-medium"
              >
                About Us
              </button>
              <Link
                to={createPageUrl("MarketInsights")}
                className="block w-full text-left py-2 text-gray-700 hover:text-green-600 font-medium"
                onClick={function() { setIsMenuOpen(false); }}
              >
                Market Insights
              </Link>
              <button
                onClick={function() { scrollToSection("contact"); }}
                className="block w-full text-left py-2 text-gray-700 hover:text-green-600 font-medium"
              >
                Contact
              </button>
              <Button
                onClick={function() { scrollToSection("contact"); }}
                className="w-full bg-gradient-to-r from-green-600 to-emerald-600"
              >
                Get a Quote
              </Button>
            </div>
          </motion.div>
        )}
      </nav>

      <section
        id="home"
        ref={heroRef}
        className="relative min-h-screen flex items-center justify-center overflow-hidden pt-20"

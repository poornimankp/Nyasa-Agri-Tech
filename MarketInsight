import React, { useState } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery } from "@tanstack/react-query";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import {
  Sprout,
  TrendingUp,
  DollarSign,
  FileText,
  Calendar,
  Search,
  Filter,
  ChevronRight,
  Tag,
} from "lucide-react";
import { motion } from "framer-motion";
import { format } from "date-fns";
import { Link } from "react-router-dom";
import { createPageUrl } from "./utils";

export default function MarketInsights() {
  const [searchQuery, setSearchQuery] = useState("");
  const [selectedCategory, setSelectedCategory] = useState("all");

  const { data: updates, isLoading } = useQuery({
    queryKey: ["marketUpdates"],
    queryFn: () => base44.entities.MarketUpdate.list("-published_date", 100),
    initialData: [],
  });

  const categories = [
    { value: "all", label: "All Updates", icon: FileText, color: "gray" },
    { value: "production", label: "Production", icon: Sprout, color: "green" },
    { value: "prices", label: "Prices", icon: DollarSign, color: "yellow" },
    { value: "policy", label: "Policy", icon: TrendingUp, color: "blue" },
  ];

  const getCategoryColor = (category) => {
    const colors = {
      production: "bg-green-100 text-green-800 border-green-200",
      prices: "bg-yellow-100 text-yellow-800 border-yellow-200",
      policy: "bg-blue-100 text-blue-800 border-blue-200",
      general: "bg-gray-100 text-gray-800 border-gray-200",
    };
    return colors[category] || colors.general;
  };

  const filteredUpdates = updates.filter((update) => {
    const matchesSearch =
      update.title.toLowerCase().includes(searchQuery.toLowerCase()) ||
      update.description.toLowerCase().includes(searchQuery.toLowerCase()) ||
      (update.tags && update.tags.some((tag) => tag.toLowerCase().includes(searchQuery.toLowerCase())));
    const matchesCategory = selectedCategory === "all" || update.category === selectedCategory;
    return matchesSearch && matchesCategory;
  });

  const featuredUpdate = filteredUpdates[0];
  const regularUpdates = filteredUpdates.slice(1);

  return (
    <div className="min-h-screen bg-gradient-to-b from-stone-50 to-amber-50/30">
      {/* Header with Background Image */}
      <section className="relative bg-gradient-to-r from-green-900 to-emerald-800 text-white py-20 overflow-hidden">
        {/* Background Image */}
        <div className="absolute inset-0 z-0">
          <img
            src="https://images.unsplash.com/photo-1574943320219-553eb213f72d?w=1920"
            alt="Market Analysis"
            className="w-full h-full object-cover opacity-20"
          />
          <div className="absolute inset-0 bg-gradient-to-r from-green-900/95 to-emerald-800/95" />
        </div>

        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
          <div className="flex items-center justify-between mb-8">
            <Link
              to={createPageUrl("Home")}
              className="flex items-center gap-2 text-green-100 hover:text-white transition-colors"
            >
              <div className="w-10 h-10 bg-white/20 rounded-lg flex items-center justify-center backdrop-blur-sm">
                <Sprout className="w-6 h-6" />
              </div>
              <span className="text-xl font-bold">Nyasa Agri-Tech</span>
            </Link>
            <Button
              variant="outline"
              className="bg-white/10 border-white/20 text-white hover:bg-white/20 backdrop-blur-sm"
              onClick={() => window.history.back()}
            >
              Back to Home
            </Button>
          </div>
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            className="text-center"
          >
            <h1 className="text-5xl md:text-6xl font-bold mb-6">
              Market Insights & Reports
            </h1>
            <p className="text-xl md:text-2xl text-green-100 max-w-3xl mx-auto">
              Stay informed with the latest updates on agricultural production, market prices, and government policies
            </p>
          </motion.div>
        </div>
      </section>

      {/* Search and Filter */}
      <section className="py-8 bg-white border-b sticky top-0 z-40 shadow-sm">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex flex-col md:flex-row gap-4 items-center">
            <div className="relative flex-1 w-full">
              <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" />
              <Input
                type="text"
                placeholder="Search updates by title, description, or tags..."
                value={searchQuery}
                onChange={(e) => setSearchQuery(e.target.value)}
                className="pl-10 h-12"
              />
            </div>
            <div className="flex gap-2 flex-wrap justify-center">
              {categories.map((cat) => {
                const Icon = cat.icon;
                return (
                  <Button
                    key={cat.value}
                    variant={selectedCategory === cat.value ? "default" : "outline"}
                    onClick={() => setSelectedCategory(cat.value)}
                    className={
                      selectedCategory === cat.value
                        ? "bg-green-600 hover:bg-green-700"
                        : ""
                    }
                  >
                    <Icon className="w-4 h-4 mr-2" />
                    {cat.label}
                  </Button>
                );
              })}
            </div>
          </div>
        </div>
      </section>

      {/* Main Content */}
      <section className="py-12">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          {isLoading ? (
            <div className="flex items-center justify-center py-20">
              <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-green-600"></div>
            </div>
          ) : filteredUpdates.length === 0 ? (
            <div className="text-center py-20">
              <FileText className="w-16 h-16 text-gray-400 mx-auto mb-4" />
              <h3 className="text-2xl font-semibold text-gray-900 mb-2">
                No updates found
              </h3>
              <p className="text-gray-600">
                Try adjusting your search or filter criteria
              </p>
            </div>
          ) : (
            <>
              {/* Featured Update */}
              {featuredUpdate && (
                <motion.div
                  initial={{ opacity: 0, y: 20 }}
                  animate={{ opacity: 1, y: 0 }}
                  className="mb-12"
                >
                  <Card className="overflow-hidden border-2 hover:shadow-2xl transition-all duration-300">
                    <div className="grid md:grid-cols-2 gap-0">
                      <div className="h-64 md:h-auto">
                        <img
                          src={
                            featuredUpdate.image_url ||
                            "https://images.unsplash.com/photo-1625246333195-78d9c38ad449?w=800"
                          }
                          alt={featuredUpdate.title}
                          className="w-full h-full object-cover"
                        />
                      </div>
                      <CardContent className="p-8 flex flex-col justify-center">
                        <Badge
                          className={`${getCategoryColor(
                            featuredUpdate.category
                          )} mb-4 w-fit border`}
                        >
                          {featuredUpdate.category.toUpperCase()}
                        </Badge>
                        <h2 className="text-3xl font-bold text-gray-900 mb-4">
                          {featuredUpdate.title}
                        </h2>
                        <p className="text-gray-600 text-lg mb-6 leading-relaxed">
                          {featuredUpdate.description}
                        </p>
                        <div className="flex items-center gap-4 mb-6 text-sm text-gray-500">
                          <div className="flex items-center gap-2">
                            <Calendar className="w-4 h-4" />
                            {format(new Date(featuredUpdate.published_date), "MMM d, yyyy")}
                          </div>
                          {featuredUpdate.tags && featuredUpdate.tags.length > 0 && (
                            <div className="flex items-center gap-2">
                              <Tag className="w-4 h-4" />
                              {featuredUpdate.tags.slice(0, 2).join(", ")}
                            </div>
                          )}
                        </div>
                        <Button
                          className="bg-green-600 hover:bg-green-700 w-fit group"
                          onClick={() => {
                            alert("Full report view coming soon!");
                          }}
                        >
                          Read Full Report
                          <ChevronRight className="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform" />
                        </Button>
                      </CardContent>
                    </div>
                  </Card>
                </motion.div>
              )}

              {/* Regular Updates Grid */}
              <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                {regularUpdates.map((update, index) => (
                  <motion.div
                    key={update.id}
                    initial={{ opacity: 0, y: 20 }}
                    animate={{ opacity: 1, y: 0 }}
                    transition={{ delay: index * 0.05 }}
                  >
                    <Card className="h-full hover:shadow-xl transition-all duration-300 group border-2 hover:border-green-200 overflow-hidden">
                      {update.image_url && (
                        <div className="h-48 overflow-hidden">
                          <img
                            src={update.image_url}
                            alt={update.title}
                            className="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                          />
                        </div>
                      )}
                      <CardContent className="p-6">
                        <Badge
                          className={`${getCategoryColor(update.category)} mb-3 border`}
                        >
                          {update.category.toUpperCase()}
                        </Badge>
                        <h3 className="text-xl font-bold text-gray-900 mb-3 line-clamp-2">
                          {update.title}
                        </h3>
                        <p className="text-gray-600 mb-4 line-clamp-3">
                          {update.description}
                        </p>
                        <div className="flex items-center justify-between text-sm text-gray-500 mb-4">
                          <div className="flex items-center gap-2">
                            <Calendar className="w-4 h-4" />
                            {format(new Date(update.published_date), "MMM d, yyyy")}
                          </div>
                        </div>
                        {update.tags && update.tags.length > 0 && (
                          <div className="flex flex-wrap gap-2">
                            {update.tags.slice(0, 3).map((tag, i) => (
                              <span
                                key={i}
                                className="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded"
                              >
                                #{tag}
                              </span>
                            ))}
                          </div>
                        )}
                      </CardContent>
                    </Card>
                  </motion.div>
                ))}
              </div>
            </>
          )}
        </div>
      </section>

      {/* Footer */}
      <footer className="bg-gray-900 text-white py-8 mt-12">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <p className="text-gray-400">
            Â© 2025 Nyasa Agri-Tech. All Rights Reserved.
          </p>
        </div>
      </footer>
    </div>
  );
}